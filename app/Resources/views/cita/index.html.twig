{% extends 'base.html.twig' %}

{% block body %}
    <h1>Citas list</h1>

    <table>
        <thead>
            <tr>
                <th>Idcita</th>
                <th>Fcita</th>
                <th>Observaciones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for citum in citas %}
            <tr>
                <td><a href="{{ path('cita_show', { 'id': citum.idcita }) }}">{{ citum.idcita }}</a></td>
                <td>{% if citum.fcita %}{{ citum.fcita|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ citum.observaciones }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cita_show', { 'id': citum.idcita }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cita_edit', { 'id': citum.idcita }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cita_new') }}">Create a new citum</a>
        </li>
    </ul>
{% endblock %}
